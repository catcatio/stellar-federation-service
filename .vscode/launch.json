{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "--inspect-brk=49382", "${workspaceFolder}/src/index.ts"],
            "program": "${workspaceFolder}/node_modules/.bin/ts-node",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "port": 49382,
            "protocol": "inspector",
            "outFiles": [
                "${workspaceFolder}/lib"
            ]
        }
    ]
}